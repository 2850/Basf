<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <appSettings>
  </appSettings>
  <connectionStrings>
    <add name="STS" connectionString="data Source=.;Initial Catalog=STS;User ID=sa;Password=angangyur; Connection Lifetime=60;Max Pool Size=75; Min Pool Size=5;" providerName="System.Data.Sqlclient"/>
  </connectionStrings>
  <log4net debug="false">
    <appender name="InfoLogFileAppender" type="log4net.Appender.RollingFileAppender, log4net">
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock"/>
      <param name="File" value="Logs\Infos\"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyy-MM-ddTHH&quot;.log&quot;"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="MaximumFileSize" value="5MB"/>
      <param name="RollingStyle" value="Date"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%n线程[%t] 记录时间：%d 日志级别：%p 用时：%r毫秒%n日志内容：%m%n%-----------------------------------------------------------------------------------------------------------------%n"/>
      </layout>
    </appender>
    <appender name="DebugLogFileAppender" type="log4net.Appender.RollingFileAppender, log4net">
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock"/>
      <param name="File" value="Logs\Debugs\"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyy-MM-ddTHH&quot;.log&quot;"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="MaximumFileSize" value="5MB"/>
      <param name="RollingStyle" value="Date"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%n线程[%t] 记录时间：%d 日志级别：%p 用时：%r毫秒%n日志内容：%m%n%-----------------------------------------------------------------------------------------------------------------%n"/>
      </layout>
    </appender>
    <appender name="ErrorLogFileAppender" type="log4net.Appender.RollingFileAppender, log4net">
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock"/>
      <param name="File" value="Logs\Errors\"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyy-MM-ddTHH&quot;.log&quot;"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="MaximumFileSize" value="5MB"/>
      <param name="RollingStyle" value="Date"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%n线程[%t] 记录时间：%d 日志级别：%p 用时：%r毫秒%n日志内容：%m%n%-----------------------------------------------------------------------------------------------------------------%n"/>
      </layout>
    </appender>
    <logger name="InfoLogger">
      <level value="Info"/>
      <appender-ref ref="InfoLogFileAppender"/>
    </logger>
    <logger name="DebugLogger">
      <level value="Debug"/>
      <appender-ref ref="DebugLogFileAppender"/>
    </logger>
    <logger name="ErrorLogger">
      <level value="Error"/>
      <appender-ref ref="ErrorLogFileAppender"/>
    </logger>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
  </startup>
</configuration>
